<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="InfoBox">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">7dp</item>
		<item name="android:layout_marginRight">7dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">30dp</item>
		<item name="android:paddingBottom">30dp</item>
	</style>

	<style name="Radiot.TextView"
		parent="@android:style/Widget.TextView">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>

	<style name="DividerHorizontal">
		<item name="android:layout_height">1px</item>
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/divider_margin</item>
        <item name="android:layout_marginRight">@dimen/divider_margin</item>
        <item name="android:background">@color/divider</item>
	</style>

    <style name="DividerVertical">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="DashboardButton">
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Header">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Header.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="Header.Micro">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Header.Medium" parent="Header">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="ChatMessageBody">
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/foreground_dark</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/background_light_blueish</item>
    </style>

    <style name="PodcastDescription">
        <item name="android:textColor">@color/foreground_dark</item>
        <item name="android:background">@color/background_light_blueish</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CurrentTopic.Text" parent="Radiot.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:lines">3</item>
    </style>
</resources>
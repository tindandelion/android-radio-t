<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
            android:id="@+id/home_screen_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="17dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:background="@color/background_darkest">
        <include
                android:id="@+id/logo"
                layout="@layout/app_logo"/>
        <TextView
                android:id="@+id/logo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/logo"
                android:layout_alignBottom="@id/logo"
                android:gravity="center_vertical|right"
                android:text="@string/logo_text"
                android:textScaleX="1.1"
                android:textColor="#A0A0A0"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingTop="10dp"/>
    </RelativeLayout>
    <org.dandelion.radiot.home_screen.DashboardLayout
            android:id="@+id/dashboard_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/home_screen_header"
            android:background="@drawable/titlebar_shadow"
            >
        <Button android:id="@+id/home_btn_main_show"
                android:text="@string/main_show_title"
                android:drawableTop="@drawable/home_btn_main_show"
                style="@style/DashboardButton"/>
        <Button android:id="@+id/home_btn_after_show"
                android:text="@string/after_show_title"
                android:drawableTop="@drawable/home_btn_after_show"
                style="@style/DashboardButton"/>
        <Button android:id="@+id/home_btn_live_show"
                android:text="@string/live_show_title"
                android:drawableTop="@drawable/home_btn_live"
                style="@style/DashboardButton"/>
        <Button android:id="@+id/home_btn_about"
                android:text="@string/about_app_title"
                android:drawableTop="@drawable/home_btn_about"
                style="@style/DashboardButton"/>
    </org.dandelion.radiot.home_screen.DashboardLayout>
</RelativeLayout>